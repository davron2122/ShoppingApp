<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/userPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="87dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintBottom_toTopOf="@id/firstnamePf"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/profile_photo_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/firstnamePf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Firstname"
        android:textSize="20sp"
        android:layout_marginLeft="80dp"
        android:textStyle="bold"
        android:layout_marginTop="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/lastnamePf"
        app:layout_constraintTop_toBottomOf="@id/userPhoto"/>

    <TextView
        android:id="@+id/lastnamePf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Lastname"
        android:textSize="20sp"
        android:layout_marginRight="80dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/firstnamePf"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/firstnamePf"/>


    <TextView
        android:id="@+id/tvColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:clickable="true"
        android:drawableRight="@drawable/ic_category"
        android:fontFamily="sans-serif"
        android:foreground="?attr/selectableItemBackground"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="-4sp"
        android:padding="16dp"
        android:text="Address"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstnamePf" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvColor" />


    <TextView
        android:id="@+id/tvSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableRight="@drawable/ic_category"
        android:fontFamily="sans-serif"
        android:foreground="?attr/selectableItemBackground"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="-4sp"
        android:padding="16dp"
        android:text="Orders"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvColor" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSize" />


    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableRight="@drawable/ic_category"
        android:fontFamily="sans-serif"
        android:foreground="?attr/selectableItemBackground"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="-4sp"
        android:padding="16dp"
        android:text="Settings"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSize" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details" />

    <TextView
        android:id="@+id/logoutBtn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="20sp"
        android:background="@drawable/primary_btn"
        android:clickable="true"
        android:gravity="center"
        android:text="Log out"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details" />



</androidx.constraintlayout.widget.ConstraintLayout>